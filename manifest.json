{
    "manifest_version": 2,
    "name": "PriceWatcher",
    "version": "1.0",
    "description": "Get notified when a product is discounted.",
    "icons": {
        "32": "icons/money_piggy-32.png",
        "48": "icons/money_piggy-48.png"
      },
    "permissions": ["alarms","activeTab","tabs","storage","<all_urls>"],

    "background": {
      "scripts": ["background-script/config.js","background-script/jquery-3.5.1.min.js",
        "background-script/background.js" ]
    },
  
    "browser_action": {
        "default_icon": "icons/money_piggy-48.png",
        "default_title": "PriceWatcher",
        "default_popup": "popup/pricewatcher.html"
      },

      "browser_specific_settings": {
        "gecko": {
            "id": "price-examples@your-domain.com"
        }
    }
  
  }